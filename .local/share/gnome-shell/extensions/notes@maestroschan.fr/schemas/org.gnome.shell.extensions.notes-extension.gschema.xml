<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="notes-extension">
	<schema id="org.gnome.shell.extensions.notes-extension" path="/org/gnome/shell/extensions/notes-extension/">
    <key type="b" name="use-shortcut">
      <default>true</default>
      <summary>Keyboard shortcut</summary>
      <description></description>
    </key>
    <key type="b" name="ugly-hack">
      <default>true</default>
      <summary>This has no actual meaning</summary>
      <description>This setting is used to call an extension.js function from prefs.js</description>
    </key>
    <key type="b" name="always-show">
      <default>false</default>
      <summary>If notes shall always be shown.</summary>
      <description>This removes icon in the top panel, and isn't compatible with the "above-all" value of "layout-position".</description>
    </key>
    <key type="s" name="layout-position">
      <default>"above-all"</default>
      <summary></summary>
      <description>Possible values are "above-all", "in-overview", and "on-background"</description>
    </key>
    <key name="keyboard-shortcut" type="as">
      <default><![CDATA[['<Super>n','']]]></default>
      <summary>Keyboard shortcut.</summary>
      <description>Keyboard shortcut which shows notes.</description>
    </key>
	</schema>
</schemalist>
